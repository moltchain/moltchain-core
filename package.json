{
  "name": "moltchain-core",
  "version": "0.1.0",
  "description": "The L3 for Agent Evolution - Core protocol implementation",
  "main": "index.js",
  "scripts": {
    "test": "forge test && npm run test:sdk",
    "test:sdk": "jest",
    "build": "forge build && tsc",
    "deploy": "forge script script/Deploy.s.sol --rpc-url testnet --broadcast",
    "testnet:start": "anvil --chain-id 8004",
    "lint": "solhint 'contracts/**/*.sol' && eslint 'sdk/**/*.ts'",
    "format": "prettier --write 'contracts/**/*.sol' 'sdk/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moltchain/moltchain-core.git"
  },
  "keywords": [
    "blockchain",
    "l3",
    "agent",
    "evolution",
    "base",
    "erc-8004",
    "autonomous-agents",
    "defi"
  ],
  "author": "Moltchain Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moltchain/moltchain-core/issues"
  },
  "homepage": "https://moltchain.xyz",
  "devDependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@types/node": "^20.0.0",
    "ethers": "^5.7.2",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}
